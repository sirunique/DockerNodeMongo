<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label for="">Full Name </label>
        <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Enter Your Full Name"
            value="{{employee.fullname}}">
        <div class="text-danger">{{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="text" name="email" id="email" class="form-control" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">{{employee.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="">Mobile</label>
            <input type="text" name="mobile" id="mobile" class="form-control" placeholder="Mobile"
                value="{{employee.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label for="">City</label>
            <input type="text" name="city" id="city" class="form-control" placeholder="City" value="{{employee.city}}">
        </div>
    </div>
    <div class="form-group d-flex justify-content-around">
        <button type="submit" class="btn btn-info"><i class="fa fa-plus"></i> Submit</button>
        <a href="/employee/list" class="btn btn-secondary"><i class="fa fa-database"></i> View All</a>
    </div>
</form>